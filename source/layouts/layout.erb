<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Funk My Mood" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>

    <link href='https://fonts.googleapis.com/css?family=Permanent+Marker' rel='stylesheet'>

    <!-- Favicon -->
    <link rel="icon" href="<%= image_path "favicon-32x32.png" %>">
    <link rel="apple-touch-icon" sizes="180x180" href="<%= image_path "apple-touch-icon.png" %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= image_path "favicon_package_v0.16/favicon-32x32.png" %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= image_path "favicon_package_v0.16/favicon-16x16.png" %>">
    <link rel="mask-icon" href="<%= image_path "favicon_package_v0.16/safari-pinned-tab.svg" %>" color="#5bbad5">
  </head>
  <body>
    <%= yield %>
  </body>
</html>
